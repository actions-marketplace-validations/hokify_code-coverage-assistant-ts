{
    "name": "code-coverage-assistant",
    "version": "0.2.0",
    "description": "Comments a pull request with the lcov code coverage",
    "license": "MIT",
    "repository": "https://github.com/ScaCap/code-coverage-assistant",
    "keywords": [
        "actions",
        "monorepo",
        "pull-request",
        "comment",
        "message"
    ],
    "main": "dist/index.js",
    "scripts": {
				"build": "tsc && ncc build lib/index.js",
				"test": "jest --passWithNoTests --coverage",
        "local": "babel-node src/cli",
        "format": "prettier --write src/*.js src/**/*.js *.js",
        "eslint": "eslint --ext .js .",
        "pre-commit": "lint-staged"
    },
    "dependencies": {
        "@actions/core": "^1.10.0",
        "@actions/github": "^4.0.0",
        "lcov-parse": "^1.0.0"
    },
    "devDependencies": {
        "@hokify/eslint-config": "^2.4.0",
        "@vercel/ncc": "^0.36.1",
        "eslint": "^8.27.0",
        "husky": ">=8.0.1",
        "jest": "^29.2.2",
        "lint-staged": "^13.0.3",
        "prettier": "^2.8.4",
        "typescript": "^4.9.5"
    },
    "jest": {
        "testMatch": [
            "<rootDir>/src/*.test.js",
            "<rootDir>/src/**/*.test.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "useTabs": false,
        "bracketSpacing": true,
        "trailingComma": "all"
    },
    "lint-staged": {
        "*.js": [
            "eslint --cache --fix",
            "prettier --write --ignore-unknown"
        ]
    }
}
